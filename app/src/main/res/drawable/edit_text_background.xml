<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft Blue Shadow Layer -->
    <item android:top="4dp" android:left="4dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:centerColor="#20007AFF"
                android:endColor="#00007AFF" />
        </shape>
    </item>

    <!-- EditText Background -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="#E9ECEF" />
        </shape>
    </item>
</layer-list>