<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Pressed Soft Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <gradient
                        android:type="radial"
                        android:gradientRadius="25dp"
                        android:centerColor="#30007AFF"
                        android:endColor="#00007AFF" />
                </shape>
            </item>
            <!-- Button Background -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E67E22" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Normal Soft Shadow -->
            <item android:top="4dp" android:left="4dp" android:right="8dp" android:bottom="8dp">
                <shape android:shape="rectangle">
                    <corners android:radius="18dp" />
                    <gradient
                        android:type="radial"
                        android:gradientRadius="35dp"
                        android:centerColor="#40007AFF"
                        android:endColor="#00007AFF" />
                </shape>
            </item>
            <!-- Button Background -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#F39C12" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>