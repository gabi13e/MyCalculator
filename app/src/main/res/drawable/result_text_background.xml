<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inner Soft Shadow -->
    <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:centerColor="#15007AFF"
                android:endColor="#00007AFF" />
        </shape>
    </item>

    <!-- Result Text Background -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#ECF0F1" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>